<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    style="@style/Widget.Material3.BottomSheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/lblTitFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/lblFiltrar"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="?attr/materialIconButtonStyle"
            android:id="@+id/btnCerrarFiltros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/close"
            app:iconTint="@color/black"
            android:drawableTint="@color/secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ScrollView
            android:id="@+id/menuFiltros"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight="wrap_content_constrained"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTitFiltro"
            app:layout_constraintBottom_toTopOf="@+id/btnAplicarFiltro"
            android:layout_marginTop="10dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="9"
                android:isScrollContainer="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/lblOrdenar"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"/>

                <TextView
                    android:id="@+id/lblCriterioOrden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/lblFiltroAlfabeticoAscen"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:paddingStart="40dp"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/fondoCardListaFelirgeses"
                    android:foregroundTint="@color/onSelectedColorBotBar">

                    <RadioButton
                        android:id="@+id/radioBtnAlfabeticoAsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroAlfabeticoAscen" />

                    <RadioButton
                        android:id="@+id/radioBtnAlfabeticoDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroAlfabeticoDescen" />

                    <RadioButton
                        android:id="@+id/radioBtnEdadAsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroEdadAscen" />

                    <RadioButton
                        android:id="@+id/radioBtnEdadDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroEdadDescen" />
                    <RadioButton
                        android:id="@+id/radioBtnAntiguedadAsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroAntiAscen" />
                    <RadioButton
                        android:id="@+id/radioBtnAntiguedadDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroAntiDescen" />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/lblFiltroSheet"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"/>
                <TextView
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/lblEdadFiltro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/fondoCardListaFelirgeses">
                    <TextView
                        android:id="@+id/lblMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblMin"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/lblMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblMax"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <EditText
                        android:id="@+id/txtEdadInicial"
                        android:layout_height="50dp"
                        android:layout_width="90dp"
                        android:layout_column="0"
                        android:layout_row="5"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColorHighlight="@color/onSelectedColorBotBar"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/lblMin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:id="@+id/txtEdadFinal"
                        android:layout_height="50dp"
                        android:layout_width="90dp"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColorHighlight="@color/onSelectedColorBotBar"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/lblMax"
                        app:layout_constraintStart_toEndOf="@id/guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="20dp"
                        />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/lblFiltroSexo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"/>

                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/checkMasculino"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroMasculino" />
                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/checkFemenino"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroFemenino"/>

                <TextView
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/lblFiltroEstadoCivil"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"/>

                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/checkCasado"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroCasado"/>
                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/checkSoltero"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroSoltero"/>
                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/checkLibre"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroLibre"/>
                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/checkDivorciado"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroDivorciado"/>
                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/checkViudo"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroViudo"/>

                <TextView
                    android:id="@+id/gruposTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Grupos predeterminados"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/swithGruposContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="40dp"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="63dp"
                        android:layout_weight="1"
                        android:text="@string/deseas_crear_un_grupo_con_estos_filtros"
                        android:textSize="18sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/create_group_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="@string/off"
                        android:textOn="@string/on"

                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/group_ev"
                    android:hint="@string/nombre_del_grupo"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_width="match_parent"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:visibility="gone"
                    android:enabled="false"
                    />
            </GridLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnAplicarFiltro"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/lblBtnAplicarFiltro"
            android:backgroundTint="@color/onSelectedColorBotBar"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/menuFiltros"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>