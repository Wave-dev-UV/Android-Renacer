<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    style="@style/Widget.Material3.BottomSheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/lblTitFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/lblFiltrar"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="?attr/materialIconButtonStyle"
            android:id="@+id/btnCerrarFiltros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/close"
            android:drawableTint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ScrollView
            android:id="@+id/menuFiltros"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight="wrap_content_constrained"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTitFiltro"
            app:layout_constraintBottom_toTopOf="@+id/btnAplicarFiltro"
            android:layout_marginTop="10dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="9"
                android:isScrollContainer="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/lblOrdenar"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"/>

                <TextView
                    android:id="@+id/lblCriterioOrden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/lblFiltroAlfabeticoAscen"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <RadioGroup
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:paddingStart="40dp"
                    android:paddingVertical="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/fondoCardListaFelirgeses"
                    android:foregroundTint="@color/onSelectedColorBotBar"
                    android:theme="@style/RadioButtonStyle">

                    <RadioButton
                        android:id="@+id/radioBtnAlfabeticoAsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/lblFiltroAlfabeticoAscen" />

                    <RadioButton
                        android:id="@+id/radioBtnAlfabeticoDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroAlfabeticoDescen" />

                    <RadioButton
                        android:id="@+id/radioBtnEdadAsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroEdadAscen" />

                    <RadioButton
                        android:id="@+id/radioBtnEdadDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblFiltroEdadDescen" />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/lblFiltroSheet"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"/>
                        <TextView
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/lblEdadFiltro"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="30dp"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondoCardListaFelirgeses">
                            <TextView
                                android:id="@+id/lblMin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lblMin"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="16sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/guideline"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:id="@+id/lblMax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lblMax"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="16sp"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="@id/guideline"
                                app:layout_constraintEnd_toEndOf="parent"/>
                            <EditText
                                android:id="@+id/txtEdadInicial"
                                android:layout_height="50dp"
                                android:layout_width="90dp"
                                android:layout_column="0"
                                android:layout_row="5"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textColorHighlight="@color/onSelectedColorBotBar"
                                app:layout_constraintTop_toBottomOf="@id/lblMin"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/guideline"
                                android:layout_marginBottom="10dp"
                                />
                            <EditText
                                android:id="@+id/txtEdadFinal"
                                android:layout_height="50dp"
                                android:layout_width="90dp"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textColorHighlight="@color/onSelectedColorBotBar"
                                app:layout_constraintTop_toBottomOf="@id/lblMax"
                                app:layout_constraintStart_toEndOf="@id/guideline"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="20dp"
                                />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/lblFiltroSexo"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="30dp"/>

                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/radioBtnMasculino"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroMasculino"
                    android:checked="true" />
                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/radioBtnFemenino"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroFemenino"
                    android:checked="true"/>

                        <TextView
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/lblFiltroEstadoCivil"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="30dp"/>

                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/radioBtnCasado"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroCasado"
                    android:checked="true"/>
                <CheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/radioBtnSoltero"
                    android:layout_marginStart="40dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblFiltroSoltero"
                    android:checked="true"/>
            </GridLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnAplicarFiltro"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/lblBtnAplicarFiltro"
            android:backgroundTint="@color/onSelectedColorBotBar"
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/menuFiltros"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>